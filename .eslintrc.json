{
  "extends": [
    "next/core-web-vitals",
    "plugin:storybook/recommended",
    "plugin:import/recommended",
    "plugin:import/warnings",
    "prettier"
  ],
  "rules": {
    "react/react-in-jsx-scope":"off",
    "import/order": [
      "error",
      {
        "alphabetize": {
          "order": "asc"
        }
      }
    ],
    "prettier/prettier":[
      "error",
      {
        "trailingComma":"all",
        "endOfLine":"lf",
        "semi":false,
        "singleQuote":"true",
        "printWidth":100,
        "tabWidth":2
      }
    ]
  }
}
